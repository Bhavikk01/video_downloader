{
    "name": "Video downloader",
    "version": "1.0",
    "manifest_version": 2,
    "description": "This is the youtube video downloader",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "downloads",
        "activeTab",
        "scripting",
        "declarativeContent",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["popup.js" ]
    }
}